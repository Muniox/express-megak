<h2>{{client.name}}</h2>

<table class="header-of-left">
    <tbody>
        <tr>
            <th>
                E-mail
            </th>
            <td>
                <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
            </td>
        </tr>
        <tr>
            <th>
                Imię
            </th>
            <td>
                {{client.name}}
            </td>
        </tr>
        <tr>
            <th>
                Data następnego kontakt
            </th>
            <td>
                {{client.nextContentAt}}
            </td>
        {{#if client.notes}}
            <tr>
                <th>
                    Notatki
                </th>
                <td>
                    {{client.notes}}
                </td>
            </tr>
        {{/if}}
    </tbody>
</table>

<p>
    <form action="/client/form/edit/{{client.id}}" method="GET">
        <button type="submit">Edytuj Klienta</button>
    </form>
</p>

{{> go-to-clients}}
