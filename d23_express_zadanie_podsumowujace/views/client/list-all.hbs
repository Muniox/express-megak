<h2>Lista Klientów</h2>

<table>
    <thead>
        <tr>
            <th>
                E-mail
            </th>
            <th>
                Imię
            </th>
            <th>
                Data następnego kontaktu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each clients}}
            <tr>
                <th>
                    <a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a>
                </th>
                <td>
                    <a href="/clients/{{this.id}}">{{this.name}}</a>
                </td>
                <td>
                    {{this.nextContactAt}}
                </td>
                <td>
                    <a href="/client/{{this.id}}">Szczegóły</a>
                    <form action="/client/{{this.id}}" method="DELETE">
                        <button type="submit">Usuń</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>


